@page
@model LoginModel
@{
    Layout = null;
    ViewData["Title"] = "Acceso";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Acceso Empresarial</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" />
</head>
<body>
    <div class="container-login">
        <div class="login-form-side">
            <div class="form-box shadow">
                <h3 class="mb-3 fw-bold text-center">Acceso Seguro</h3>
                <p class="text-muted text-center mb-4">Ingrese sus credenciales empresariales</p>

                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label">ID de Usuario</label>
                        <input asp-for="Nombre" class="form-control" type="text" placeholder="Ej: 1" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Contraseña</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" />
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Iniciar sesión</button>

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger mt-3 text-center">@Model.ErrorMessage</div>
                    }
                </form>

            </div>
        </div>

        <div class="login-image-side"></div>
    </div>
</body>
</html>
